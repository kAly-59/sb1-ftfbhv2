---
const { fullTitle } = Astro.props;
---
<header class="page-header">
	<h1>
	  <span class="title-ent">{fullTitle}</span> | <span class="title-wiki">Wiki SSOCL</span>
	</h1>
	<nav class="tabs">
	  <h3><a href="/" class="tab">Accueil</a></h3>
	</nav>
  </header>


<style>
	.title-ent {
	color: rgb(49, 48, 48); /* Le titre "Turb√©" sera blanc */
	}

	.title-wiki {
	color: rgba(23,71,158,255); /* Le "Wiki SSOCL" restera bleu */
	}

	.page-header {
		padding: 2rem 0;
		text-align: center;
		margin-bottom: 2rem;
	}
	h1 {
		color: rgba(23,71,158,255);
		font-size: 2.5rem;
		margin-bottom: 1.5rem;
	}
	.tabs {
		display: flex;
		justify-content: center;
		gap: 1rem;
	}
	.tab {
		padding: 0.5rem 2rem;
		color: rgba(23,71,158,255);
		text-decoration: none;
		border-radius: 20px;
		transition: all 0.2s ease;
		border: 2px solid rgba(23,71,158,255);
	}
	.tab:hover {
		background: rgba(23,71,158,255);
		color: white;
	}
</style>